(defwidget sound-popup [] 
  (box :class "sound-popup border popup-element ${sound-icon == "Û∞ùü" ? "disable" : "enable"}" :space-evenly "false" :orientation "h"
    (eventbox :onclick "pactl set-sink-mute @DEFAULT_SINK@ toggle"
      (label :text "${sound-icon}")
    )
    (scale :min 0
           :max 101
           :active true
           :value "${sound-value}"
           :orientation "h"
           :onchange "pactl set-sink-volume @DEFAULT_SINK@ {}%"
    )
  )
)
